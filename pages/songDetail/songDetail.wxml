<view class="songDetailContainer">
    <view class="author">{{song.ar[0].name}}</view>
    <view class="circle"></view>
    <image class="needle {{isPlay && 'needleRotate'}}" src="/static/images/song/needle.png"></image>
    <view class="discContainer">
        <image class="disc" src="/static/images/song/disc.png"></image>
        <image class="musicImg {{isPlay && 'discAnimation'}}" src="{{song.al.picUrl}}"></image>
    </view>

    <!-- 底部控制播放区 -->
    <view class="musicContainer">
        <text class="iconfont icon-iconsMusicyemianbofangmoshiShuffle"></text>
        <text class="iconfont icon-shangyishou"></text>
        <text class="iconfont {{isPlay?'icon-bofang':'icon-zanting'}} big" bindtap="handleMusicPlay"></text>
        <text class="iconfont icon-next"></text>
        <text class="iconfont icon-iconsMusicyemianbofangmoshiPlayList"></text>
    </view>
</view>